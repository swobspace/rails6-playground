<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<div data-controller="hello">
  <div data-target="hello.output"></div>
</div>

<div data-controller="datatables">
<table id="tasks" class="table table-striped" role="datatable" data-target="datatables.datatable">
  <thead>
    <tr>
      <th>Start</th>
      <th>Deadline</th>
      <th>Subject</th>
      <th>Responsible</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.start %></td>
        <td><%= task.deadline %></td>
        <td><%= task.subject %></td>
        <td><%= task.responsible %></td>
        <td><%= link_to raw(%Q[<i class="fas fa-eye fa-fw"></i>]), task, class: 'btn btn-secondary' %>
        <%= link_to raw(%Q[<i class="fas fa-pencil-alt fa-fw"></i>]), edit_task_path(task), class: 'btn btn-secondary' %>
        <%= link_to raw(%Q[<i class="fas fa-trash fa-fw"></i>]), task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Task', new_task_path %>
